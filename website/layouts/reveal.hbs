<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="{{rootPath}}css/reveal.css">
    <link rel="stylesheet" href="{{rootPath}}css/theme/simple.css" id="theme">
    <link rel="stylesheet" href="{{rootPath}}css/github.css">
</head>
<body>
    <div class="reveal">
        <div class="slides">
            {{{contents}}}
        </div>
    </div>

    <script src="{{rootPath}}js/reveal.js"></script>
    <script src="{{rootPath}}js/head.load.min.js" charset="utf-8"></script>
    <script>
        Reveal.initialize({
            controls: false,
            slideNumber: true,
            transition: 'slide', // none/fade/slide/convex/concave/zoom
            dependencies: [
                { src: '{{rootPath}}js/plugin/highlight/highlight.js', async: true, callback: function() { hljs.initHighlightingOnLoad(); } },
                { src: '{{rootPath}}js/plugin/math/math.js', async: true },
            ],
        });
    </script>
    {{#dev}}
    <script src="http://localhost:35729/livereload.js"></script>
    {{/dev}}

</body>
</html>
